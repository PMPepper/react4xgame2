{
    "compilerOptions": {
      "jsx": "react",
      "module": "esnext",
      "esModuleInterop": true,
      "target": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "lib": ["webworker", "es6", "scripthost", "dom"],
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "lib": ["es2017"],
    "include": ["src"]
}
